<% if @user.errors.any? %>
  <ul>
    <%@user.errors.full_messages do |message|  %>
    <li><%= message %></li><br>
  </ul>
    <% end %>
<% end %>

<h1>Update Page</h1>
<%= link_to 'Delete Profile',  user_path, data: { confirm: 'Are you sure?' }, method: :delete %>
<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <%= f.label :password %>
  <%= f.text_field :password %>
  <%#= f.label :confirm_password %>
  <%#= f.text_field :confirm_password %>
  <%= f.submit %>
  <% end %>
